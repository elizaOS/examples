{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node", "bun"]
  },
  "include": ["*.ts", "typescript/**/*.ts", "api/**/*.ts"],
  "exclude": ["node_modules", "dist", "rust"]
}
