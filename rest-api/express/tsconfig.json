{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "noEmit": true,
    "types": ["bun", "node"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}

